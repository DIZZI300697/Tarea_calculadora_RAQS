<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">


    /* Pantalla de arriba para mostrar el proceso */


    <!-- Pantalla de abajo para mostrar el resultado -->

    <TextView
        android:id="@+id/processTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="textEnd"
        android:textSize="34sp" />

    <!-- GridLayout con botones -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:padding="8dp"
        android:textSize="24sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="545dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Botones para los números y operaciones -->

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#5E5C5C"
            android:text="C"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#5E5C5C"
            android:text="/"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#5E5C5C"
            android:text="X"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#5E5C5C"
            android:text="-"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_weight="0"
            android:backgroundTint="#ED0606"
            android:text="7"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:text="8"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:text="9"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#5E5C5C"
            android:text="+"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:text="4"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:text="5"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:text="6"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />
        <!-- Botón para el punto decimal -->
        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:text="."
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:text="1"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />


        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:text="3"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <!-- Botón para el cero -->
        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:text="0"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <!-- Botón para el igual -->
        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#5E5C5C"
            android:text="="
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:text="2"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:backgroundTint="#5E5C5C"
            android:text="CA"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonPercentage"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:backgroundTint="#5E5C5C"
            android:text="%"
            android:textSize="24sp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

    </GridLayout>

</LinearLayout>
